<h2 class="text-center py-5">Sign in to BowerBird</h2>

<div class="pb-5">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="d-flex justify-content-end form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-dark" %>
    </div>
  <% end %>

  <div class="d-flex pt-4 flex-column justify-content-center align-items-center">
    <div class="d-flex flex-wrap text-center gap-2">
      <span>Don't have an account?</span> <%= link_to "Sign up", new_user_registration_path %>
    </div>

    <div class="d-flex flex-wrap text-center pt-2">
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>
  </div>
</div>
